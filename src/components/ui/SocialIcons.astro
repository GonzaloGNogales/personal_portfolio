<style>
	.social-button {
		position: relative;
		background: transparent;
		color: #000000;
		transform: scale(1);
		box-shadow: 0 0 0 rgba(255, 107, 107, 0);
		transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
	}

	.social-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		border-radius: 0.75rem;
		background: linear-gradient(
			45deg,
			#ff6b6b,
			#fcb045,
			#ffe53b,
			#4ecdc4,
			#45b7d1,
			#a259c6,
			#96c93d,
			#ff6b6b
		);
		background-size: 400% 400%;
		opacity: 0;
		z-index: -1;
		transition: all 0.5s ease;
		animation: gradientShift 6s ease infinite;
	}

	.social-button::after {
		content: '';
		position: absolute;
		top: -2px;
		left: -2px;
		right: -2px;
		bottom: -2px;
		border-radius: 0.875rem;
		background: linear-gradient(
			45deg,
			#ff6b6b,
			#fcb045,
			#ffe53b,
			#4ecdc4,
			#45b7d1,
			#a259c6,
			#96c93d,
			#ff6b6b
		);
		background-size: 400% 400%;
		opacity: 0;
		z-index: -2;
		filter: blur(8px);
		transition: all 0.5s ease;
		animation: gradientShift 6s ease infinite;
	}

	.social-button:hover {
		transform: scale(1.15);
		color: #ffffff;
		box-shadow: 
			0 0 20px rgba(255, 107, 107, 0.6),
			0 0 40px rgba(78, 205, 196, 0.4),
			0 0 60px rgba(69, 183, 209, 0.2);
	}

	.social-button:hover::before {
		opacity: 1;
		animation: gradientShift 5s ease infinite;
	}

	.social-button:hover::after {
		opacity: 0.8;
		animation: gradientShift 5s ease infinite;
	}

	@keyframes gradientShift {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	/* Individual button color variations on hover */
	.social-button:nth-child(1):hover {
		color: #ffffff;
		box-shadow: 
			0 0 20px rgba(255, 107, 107, 0.8),
			0 0 40px rgba(255, 107, 107, 0.6),
			0 0 60px rgba(255, 107, 107, 0.4);
	}

	.social-button:nth-child(2):hover {
		color: #ffffff;
		box-shadow: 
			0 0 20px rgba(69, 183, 209, 0.8),
			0 0 40px rgba(69, 183, 209, 0.6),
			0 0 60px rgba(69, 183, 209, 0.4);
	}

	.social-button:nth-child(3):hover {
		color: #ffffff;
		box-shadow: 
			0 0 20px rgba(78, 205, 196, 0.8),
			0 0 40px rgba(78, 205, 196, 0.6),
			0 0 60px rgba(78, 205, 196, 0.4);
	}

	.social-button:nth-child(4):hover {
		color: #ffffff;
		box-shadow: 
			0 0 20px rgba(150, 201, 61, 0.8),
			0 0 40px rgba(150, 201, 61, 0.6),
			0 0 60px rgba(150, 201, 61, 0.4);
	}

	.social-button:nth-child(5):hover {
		color: #ffffff;
		box-shadow: 
			0 0 20px rgba(255, 107, 107, 0.8),
			0 0 40px rgba(255, 107, 107, 0.6),
			0 0 60px rgba(255, 107, 107, 0.4);
	}
</style>
